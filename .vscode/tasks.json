{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build tests",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/tests"
      },
      "linux": {
        "command": "for test in *.tex ; do lualatex -interaction=nonstopmode -halt-on-error $test ; done"
      },
      "osx": {
        "command": "for test in *.tex ; do lualatex -interaction=nonstopmode -halt-on-error $test ; done"
      },
      "windows": {
        "command": "for %f in (*.tex) do lualatex -interaction=nonstopmode -halt-on-error %f"
      }
    },
    {
      "label": "l3build check",
      "type": "shell",
      "command": "l3build check"
    },
    {
      "label": "l3build clean",
      "type": "shell",
      "command": "l3build clean"
    },
    {
      "label": "l3build doc",
      "type": "shell",
      "command": "l3build doc"
    }
  ]
}
